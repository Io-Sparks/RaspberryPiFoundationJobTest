# Example configuration for the factory simulation
# Copy this file to .env and modify the values as needed

# The length of the conveyor belt.
BELT_LENGTH=15

# The number of worker pairs.
NUM_WORKER_PAIRS=3

# The strategy for the workers. Can be "individual", "team", or "hivemind".
STRATEGY=team

# The number of steps to run the simulation for.
NUM_STEPS=100

# Suppress the step-by-step output of the simulation.
# Set to "true" to enable quiet mode.
QUIET_MODE=false
